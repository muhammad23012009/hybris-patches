From: Simonas Leleiva <simonas.leleiva@meramo.co.uk>
Date: Wed, 15 Jul 2015 08:29:08 +0000
Subject: [PATCH 02/12] (hybris) Pick GLES shared objects from appropriate
 paths (32-bit case)

Change-Id: I4c7739ba8a4d64fa115163d5700b0df3370b286b
Signed-off-by: Simonas Leleiva <simonas.leleiva@jollamobile.com>
---
 opengl/libs/EGL/Loader.cpp | 10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/opengl/libs/EGL/Loader.cpp b/opengl/libs/EGL/Loader.cpp
index 9dea4eb..92917ec 100644
--- a/opengl/libs/EGL/Loader.cpp
+++ b/opengl/libs/EGL/Loader.cpp
@@ -57,9 +57,9 @@ namespace android {
 
 #ifndef SYSTEM_LIB_PATH
 #if defined(__LP64__)
-#define SYSTEM_LIB_PATH "/system/lib64"
+#define SYSTEM_LIB_PATH "/system/lib64/"
 #else
-#define SYSTEM_LIB_PATH "/system/lib"
+#define SYSTEM_LIB_PATH ""
 #endif
 #endif
 
@@ -339,13 +339,13 @@ void* Loader::open(egl_connection_t* cnx) {
                         HAL_SUBNAME_KEY_PROPERTIES[2]);
 
     if (!cnx->libEgl) {
-        cnx->libEgl = load_wrapper(SYSTEM_LIB_PATH "/libEGL.so");
+        cnx->libEgl = load_wrapper(SYSTEM_LIB_PATH "libEGL.so");
     }
     if (!cnx->libGles1) {
-        cnx->libGles1 = load_wrapper(SYSTEM_LIB_PATH "/libGLESv1_CM.so");
+        cnx->libGles1 = load_wrapper(SYSTEM_LIB_PATH "libGLESv1_CM.so");
     }
     if (!cnx->libGles2) {
-        cnx->libGles2 = load_wrapper(SYSTEM_LIB_PATH "/libGLESv2.so");
+        cnx->libGles2 = load_wrapper(SYSTEM_LIB_PATH "libGLESv2.so");
     }
 
     if (!cnx->libEgl || !cnx->libGles2 || !cnx->libGles1) {
