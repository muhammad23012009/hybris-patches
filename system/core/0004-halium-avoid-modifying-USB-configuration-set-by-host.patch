From: TheKit <nekit1000@gmail.com>
Date: Sat, 19 Dec 2020 21:42:41 +0200
Subject: [PATCH 04/19] (halium) avoid modifying USB configuration set by host

Change-Id: I76ff71ca5784be1be93819a5b9bfb74a6c5c0da2
---
 rootdir/init.rc | 7 +++++--
 usbd/usbd.rc    | 2 +-
 2 files changed, 6 insertions(+), 3 deletions(-)

diff --git a/rootdir/init.rc b/rootdir/init.rc
index ead99de..9e3be2b 100644
--- a/rootdir/init.rc
+++ b/rootdir/init.rc
@@ -5,10 +5,13 @@
 #
 
 import /init.environ.rc
-import /system/etc/init/hw/init.usb.rc
+# Disabled for Halium
+#import /system/etc/init/hw/init.usb.rc
+
 import /init.${ro.hardware}.rc
 import /vendor/etc/init/hw/init.${ro.hardware}.rc
-import /system/etc/init/hw/init.usb.configfs.rc
+# Disabled for Halium
+#import /system/etc/init/hw/init.usb.configfs.rc
 import /system/etc/init/hw/init.${ro.zygote}.rc
 
 # Cgroups are mounted right before early-init using list from /etc/cgroups.json
diff --git a/usbd/usbd.rc b/usbd/usbd.rc
index 809044a..56c8934 100644
--- a/usbd/usbd.rc
+++ b/usbd/usbd.rc
@@ -1,4 +1,4 @@
-service usbd /system/bin/usbd
+service usbd /system/bin/usbd_DISABLED
     class late_start
     oneshot
     user root
